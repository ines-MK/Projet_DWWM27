{% extends 'base.html.twig' %}

{% block title %}Modification adresse{% endblock %}


{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/address.css')}}">{% endblock %}

{% block body %}
<h1 class="text-center" style="color:#6F5843; margin-bottom: 50px;";>Modifier mon adresse</h1>

{{ form_start(addressForm) }}
<div class="row" style="margin: 30px; color:#6F5843;">
    <div class="col-6" id="champ">
        {{ form_row(addressForm.address, {
            'label':'Adresse',
            'attr':{'placeholder':'Ex.: 52 avenue du Général Leclerc'}
        }) }}
    </div>
    <div class="col-6" id="champ">
        {{ form_row(addressForm.zip, {
            'label':'Code Postal',
            'attr':{'placeholder':'Ex.: 69000'}
        }) }}
    </div>
    <div class="col-6" id="champ">
        {{ form_row(addressForm.city, {
            'label':'Ville',
            'attr':{'placeholder':'Lyon'}
        }) }}
    </div>
    <div class="col-6" id="champ">
        {{ form_row(addressForm.country, {
            'label':'Pays'
        }) }}
    </div>
</div>
<div class="col-12 text-end my-3">
    <a href="{{ path('app_user')}}" class="btn btn-secondary" style="background-color:#C19971; border:none;">Annuler</a>
    <button class="btn btn-success me-5" style="background-color:#6F5843; border:none;">Modifier</button>
</div>
    {{ form_end(addressForm) }}
{% endblock %}