{% extends 'baseAdmin.html.twig' %}

{% block title %}PaymentRequest{% endblock %}

{% block body %}
    <h1>PaymentRequest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment_request.id }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ payment_request.createdAt ? payment_request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Payer le</th>
                <td>{{ payment_request.paidAt ? payment_request.paidAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Validé</th>
                <td>{{ payment_request.validated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StripeSessionId</th>
                <td>{{ payment_request.stripeSessionId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_payment_request_index') }}">Retour à la liste</a>

    <a href="{{ path('app_admin_payment_request_edit', {'id': payment_request.id}) }}">Modifier</a>

    {{ include('admin_payment_request/_delete_form.html.twig') }}
{% endblock %}
