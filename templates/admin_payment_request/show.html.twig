{% extends 'baseAdmin.html.twig' %}

{% block title %}Paiments{% endblock %}

{% block body %}
    <h1 class="text-center" style="margin-bottom: 30px;">Paiements</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment_request.id }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ payment_request.createdAt ? payment_request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Validé</th>
                <td>{{ payment_request.validated ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Identifiant de session Stripe</th>
                <td>{{ payment_request.stripeSessionId }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row align-center">
        <a class="text-end m-1" href="{{ path('app_admin_payment_request_index') }}"><button class="btn" style="background-color:#6F5843; padding: 10px; color: #FCF0D7;">Retour à la liste</button></a>

        
<div class="text-end m-1">
    {{ include('admin_payment_request/_delete_form.html.twig') }}
</div>
        
    </div>
    
{% endblock %}
