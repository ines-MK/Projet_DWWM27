{% extends 'base.html.twig' %}

{% block title %}Validation Panier{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/validation.css')}}">{% endblock %}

{% block body %}<h1 class="text-center">Validation</h1>

<div class="row w-100" id="row">
    <div class="col-6 p-5" id="panier">
        <h2 class="text-center">Votre panier</h2>
    <table class="table text-center">
        <thead>
            <th></th>
            <th>Nom</th>
            <th>Quantité</th>
            <th class="col-3">Prix</th>
        </thead>
    {% for element in cart %}
        <tbody class="align-middle">
            <tr>
                <td><img src="{{ asset('img/product/' ~ element.product.image) }}" alt="Image Principale du produit {{ element.product.name }}"></td>
                <td>{{ element.product.name }}</td>
                <td>{{ element.quantity }}</td>
                <td>{{ element.product.price }} €</td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th></th>
                <th>TOTAL :</th>
                <th>{{ total }} €</th>
            </tr>
        </tfoot>
</table>
</div>

<div class="col-6 p-5" id="livraison">
    <h2 class="text-center" style="margin-bottom: 40px;">Livraison</h2>
    {{ form_start(cartValidationForm) }}
        {{ form_row(cartValidationForm.
            billing_address, {
                'label': "Adresse de facturation" })}}
            {{ form_row(cartValidationForm.
                delivery_address, {
                    'label': "Adresse de livraison" })}}
                <div class="row text-end">
                    <div class="col-12">
                        <a href="{{ path('address_add') }}" style="background-color:#C19971; color: #FCF0D7; border:none; border-radius:50px; padding: 10px 20px 10px 20px; text-decoration:none;">Ajouter une adresse</a>
                        <button type="submit" class="btn btn-succes validation m-3" style="color: #FCF0D7;">Payer</button>
                    </div>
                </div>
    {{ form_end(cartValidationForm) }}
</div>



{% endblock %}