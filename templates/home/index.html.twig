{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}

<!-- Début de l'entête -->
<div class="col-12">
    <section class="centre">
    <h1>BIENVENUE</h1> 
   <a href="{{ path('we') }}"><input type="button" value="Découvrir"></a> 
</section>
</div>

<!-- Fin de l'entête -->

<!-- Début du main -->
    <main>
        <section class="section1">
            <span><h5>DERNIERS PRODUITS — <a href="{{ path('products') }}">Voir Tout</a></h5></span>
                    <div class="col-12">
                        <div class="cards">
                            {% for product in products %}
                            <a href="{{ path('product_detail' , {'slug' : product.slug }) }}">
                                    <div class="card">
                                        <img src="{{ asset('img/product/' ~ product.image) }}" alt="Image Principale du produit {{ product.name }}">
                                        <h6>{{product.name}}</h6>
                                        <p>{{product.price}}€</p>
                                    </div>
                                </a>    
                            {% endfor %}
                        </div>
                    </div>
        </section>
        
        <section class="col-12">
            <div class="nous">
                <div class="left">
                    <h2>Notre histoire</h2>
                    <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Quis deleniti 
                    voluptates veniam modi cum ipsum ab perspiciatis exercitationem, minima 
                    molestias? Incidunt ullam dolor id ipsam alias consequuntur magnam quia culpa.</p>
                    <input type="button" value="En savoir plus">
                </div>
                <div class="right">
                    <img src="{{ asset('img/kamel.jpg') }}" alt="Image/jpg">
                </div> 
            </div>
            <div class="produits">
                <div class="left col-3">
                    <h2>Nos valeurs</h2>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis aspernatur 
                       repudiandae officia totam nesciunt error delectus eaque, nostrum eum, temporibus 
                       quidem fugit iure beatae ratione nobis modi assumenda quas quasi.</p>
                       <input type="button" value="En savoir plus">
                </div>
                <div class="right">
                    <img src="{{ asset('img/gold.jpg') }}" alt="Image/jpg">
                </div>
            </div>
        </section>
    </main>
<!-- Fin du main -->
{% endblock %}