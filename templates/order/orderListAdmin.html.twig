{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
    <h1 id="liste">Liste des commandes✅</h1>
    <table class="table table-sm text-center align-middle">
        <thead>
            <tr>
                <th class="col-1">N°</th>
                <th class="col-1">Référence</th>
                <th class="col-1">Montant</th>
                <th class="col-1">Crée le</th>
                <th class="col-1">Heure</th>
                <th class="col-1">Payé</th>
                <th class="col-1">Actions</th>
            </tr>
        </thead>
        
        <tbody>
            {% for order in orders|reverse %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.reference }}</td>
                <td>{{ order.amount }}€</td>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ order.createdAt ? order.createdAt|date('H:i:s') : '' }}</td>
                <td>{{ order.paid ? 'Oui' : 'Non' }}</td> 
                <td>
                    <a href="{{ path('order_delete', {'id': order.id}) }}" title="Détails"><i class="bi bi-trash3 text-danger m-1"></i></a>
                    <a href="{{ path('order_details', {'id': order.id}) }}" title="Détails"><i class="bi bi-eye m-1" style="color: rgb(127, 170, 244);"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}