{% extends 'base.html.twig' %}

{% block title %}Mon Espace{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/user.css')}}">{% endblock %}

{% block body %}
    <h1 class="text-center">Bienvenue dans ton espace {{ app.user.FirstName }} !</h1>

    <div class="row" id="espace_user">
        
        <div class="row">
            <div class="col-6">
                <h3 class="text-center m-3">Informations personnelles</h3>
                <div class="row">
                    <div class="text-center" id="address">
                <h5>Mon Adresse</h5>
                     {% for address in addresses %}
                    {{ address.address }},
                    <br>
                    {{ address.zip }},  {{ address.city }} - {{ address.country }}
                {% endfor %}
                <br>
              <b><a href="{{ path('user_addresses') }}">Gérer mes adresses</a></b>  
                </div>

                <div class="text-center" id="mdp">
                    <h5 style="margin-bottom: 20px;">Mot de passe</h5>
                    <b><a href="{{ path('app_forgot_password_request') }}">Modifier mon mot de passe</a></b> 
                </div>
                </div>
                
            </div>
            
            
            <div class="col-6">
                <h3 class="text-center m-3">Mes commandes</h3>
                <div style="display: flex; justify-content: center;">
                <div class="text-center" id="order">
                    <h5>Mes 3 dernières commandes</h5>
                    {% for order in orders %}
                 <b style="color:#ffffff ;">N° :</b>   {{ order.reference }} <b style="color:#ffffff63 ;">|</b> {{ order.amount }}€ <br>
                   {% endfor %}
             <b><a href="{{ path('user_orders') }}">Gérer mes commandes</a></b>
                </div>
                
            
               </div>
            </div>
            
        </div>
        
        

    </div>
    
    
    
{% endblock %}
